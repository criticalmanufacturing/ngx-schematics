{
  "files.exclude": {
    "**/*.js": { "when": "$(basename).ts" },
    "**/*.d.ts": { "when": "$(basename).ts" },
    "**/*.js.map": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
